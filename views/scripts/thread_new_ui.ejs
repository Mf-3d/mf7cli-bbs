  function escape_html(string) {
    if (typeof string !== "string") return string;
    return string.replace(/[&'`"<>]/g, (match) => {
      return {
        "&": "&amp;",
        "'": "&#x27;",
        "`": "&#x60;",
        '"': "&quot;",
        "<": "&lt;",
        ">": "&gt;"
      }[match];
    });
  }

